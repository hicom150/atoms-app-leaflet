@import "../../../style/__vendor.styl"

[data-atom=leaflet]
  position: relative
  display: block
  background-color: #ddd
  display-flex()
  justify-content center
  align-content center
  align-items center
  &.big
    height: 12rem
  &.small
    height: 6rem
  &:not(.full):not(.big):not(.small)
    height: 8rem
  > .icon
    display: block
    font-size: SIZE = 3rem
    width: SIZE
    height: SIZE
    color: WHITE

[data-atom=leaflet].full, [data-organism=section][data-extend=leaflet] > [data-atom=leaflet]
  position: absolute !important
  width: 100% !important
  height: 100% !important

[data-organism=section][data-extend=leaflet]
  position: relative
  > [data-atom=leaflet]
    z-index: 0
  > [data-atom=button], > [data-molecule=form]
    z-index: 1
    position: absolute
  AIR = 0.75rem
  > [data-atom=button]
    top: 0
    margin: AIR
  > [data-molecule=form]
    bottom: 0
    padding: AIR
